# The AI Exchange — VPS Environment Configuration
# Copy to .env and fill in your values: cp .env.example .env

# ── Security ──────────────────────────────────────────────
# REQUIRED: Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-to-a-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ── Database ──────────────────────────────────────────────
# Absolute path inside container — do NOT change unless you also update volume mounts
DATABASE_URL=sqlite:////app/data/db/ai_exchange.db

# ── API Configuration ────────────────────────────────────
API_V1_STR=/api/v1
PROJECT_NAME="The AI Exchange"

# ── Domain / Origin Configuration ────────────────────────
# ALLOWED_ORIGINS: CORS origins (JSON array)
ALLOWED_ORIGINS=["https://theaiexchange.serveur.au"]

# ALLOWED_DOMAINS: Email domain whitelist for registration (JSON array)
ALLOWED_DOMAINS=["curtin.edu.au"]

# EMAIL_WHITELIST: Specific email addresses allowed regardless of domain (JSON array)
EMAIL_WHITELIST=[]

# ── Email Configuration ──────────────────────────────────
# Provider: dev (console only), gmail, sendgrid, custom, curtin
EMAIL_PROVIDER=dev
MAIL_FROM=noreply@example.com
MAIL_FROM_NAME="The AI Exchange"
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
USE_TLS=true
USE_SSL=false

# ── Logging ──────────────────────────────────────────────
LOG_LEVEL=INFO
DEBUG=false
